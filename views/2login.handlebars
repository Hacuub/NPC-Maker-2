<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>NPC Maker</title>
		  <script crossorigin src="https://unpkg.com/react@16/umd/react.development.js"></script>
  		  <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>
  		  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  		  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  		  <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.6.2/remarkable.min.js"></script>
		<link rel="stylesheet" 
        href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.0/css/bulma.min.css">
		<script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
        <!--link rel="stylesheet" href="assets/debug.css"-->
        <style>
            .center {
                display: flex;
                justify-content: center;
                align-items: center;

            }
        </style>
	</head>
	<body>
		<section class="hero has-background-white">
            <div class="hero-body">
			    <div class="container">
			    	<h1 class="image center">
			    		<image src="/assets/img/dndBlack.png" style="max-width: 180px;">
			    	</h1>
			    </div>
            </div>
		</section>
        <section class="hero hero has-background-white">
            <div class="hero-body">
			    <div class="container">
			    	<h1 class="title is-size-1 center">
			    		NPC Maker
			    	</h1>
			    </div>
            </div>
		</section>

         <section class="section has-background-dark">
			<div class="container">
				<div class="columns">
					<div class="column">
                            <a class = "center is-link is-size-4" id="loginButton" href="/login">Login</a>
					</div>
                    <div class="column">
                            <a class = "center is-link is-size-4" id="signupButton" href="/signup">Sign up</a>
					</div>
					</div>
				</div>
			</div>
		</section>

        <section class="section has-background-light">
			<div class="container">
				<div class="columns">
					<div class="column">
							<h1 class="image is-1by3 card">
			    		        <image src="/assets/img/advertisement.png" style="max-width: 256px;">
			    	        </h1>
					</div>
                    <div class="column is-two-thirds">
						<div class="notification is-primary">
                            <p class="is-size-5">
							    <section id="content"></section>						    </p>
							  <div id="npcMessage">
    							<p><span id="errorMessage"></span></p>
  							  </div>
                        </div>
					</div>
					<div class="column">
							<h1 class="image is-1by3 card">
			    		        <image src="/assets/img/advertisement.png" style="max-width: 256px;">
			    	        </h1>
					</div>
					</div>
				</div>
			</div>
		</section>
	</body>
</html>